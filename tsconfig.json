{
  "compilerOptions": {
    "target": "es2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "paths": {
    "@src/*": ["src/*"]
  },
  "include": [
    "vite.config.*",
    "package.json",
    "vitest.config.*",
    "cypress.config.*",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "shims.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "@src/*"
  ],
  "typeRoots": ["node_modules/@types"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["dist", "node_modules"]
}
